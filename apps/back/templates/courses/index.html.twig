{% extends 'base.html.twig' %}
{% block title %}Courses{% endblock %}
{% block body %}

    <h1>Index</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Video</th>
        </tr>
        </thead>
        <tbody>
            {% for course in courses %}
            <tr>
            <td>{{ course.id }}</td>
                <td>{{ course.name }}</td>
                <td>{{ course.video }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}